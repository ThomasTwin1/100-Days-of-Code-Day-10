# Adding Function
def add(n1, n2):
     return n1 + n2




# Subtracting Function
def subtract(n1, n2):
    return n1 - n2




# Multiplying Function
def multiply(n1, n2):
    return n1 * n2




# Dividing Function
def divide(n1, n2):
    return n1 / n2



operations = {
    "+": add,
    "-": subtract,
    "*": multiply,
    "/": divide
}
print(operations["*"](4,8))


# Ask user for number
first_number = int(input("What's the first number?"))

# Ask for the operation
first_operation = input("Pick an operation:")

# Ask for next number
next_number = int(input("What's the next number?"))

# Print result
result = operations[first_operation](first_number,next_number)
print(result)
# Ask if user wants to continue



